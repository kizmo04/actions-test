{
  "name": "adnamas",
  "version": "0.0.4",
  "license": "MIT",
  "workspaces": [
    "packages/**/*"
  ],
  "ntl": {
    "runner": "yarn"
  },
  "scripts": {
    "lint:ci": "eslint 'packages/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'packages/**/*.{ts,tsx,js,jsx}' --fix",
    "format:fix": "prettier --write ./packages '!**/*.{yml,yaml}'",
    "prepare:prerelease": "yarn workspaces since run 'yarn vt prerelease --preid rc && ../../commit_and_tag.sh' $(git rev-parse $(git describe --abbrev=0 --tags))",
    "build": "yarn workspaces foreach -ptv --since run build",
    "version:patch": "yarn workspaces since run 'yarn version patch' refs/tags/latest",
    "publish": "yarn workspaces since run 'exec echo hh' $(git rev-parse HEAD~1)",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,tsx,jsx,scss}": [
      "yarn lint:fix",
      "yarn format:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/eslint": "^7",
    "@types/prettier": "^2",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "actions-toolkit": "^6.0.1",
    "eslint": "7.32.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "simple-git": "^3.4.0",
    "standard-version": "^9.3.2"
  },
  "dependencies": {
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.3"
  },
  "packageManager": "yarn@3.2.0"
}
